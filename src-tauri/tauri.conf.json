{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ortu",
  "version": "0.1.0",
  "identifier": "com.ortu.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Ortu",
        "label": "main",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "center": true
      },
      {
        "title": "Ortu Quick Access",
        "label": "popup",
        "url": "/popup",
        "width": 550,
        "height": 450,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}