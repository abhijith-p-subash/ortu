{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ortu",
  "version": "1.0.1",
  "identifier": "com.ortu.clipboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "title": "Ortu",
        "label": "main",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "visible": false,
        "center": true
      },
      {
        "title": "Ortu Quick Access",
        "label": "popup",
        "url": "/popup",
        "width": 550,
        "height": 450,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "visibleOnAllWorkspaces": true,
        "focus": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline'; script-src 'self'; connect-src 'self' ipc: http://localhost:* http://127.0.0.1:*"
    },
    "macOSPrivateApi": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installerHooks": "src/installer.nsh"
      }
    }
  }
}